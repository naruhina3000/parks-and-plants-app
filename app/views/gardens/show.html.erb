<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
    <p>The coziest Garden in the world</p>
    <%= link_to 'Edit', edit_garden_path(@garden), class: "btn btn-flat" %>
  </div>
</div>

<div class="container py-3">
  <div class="cards">
    <% @garden.plants.each do |plant| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plant.image_url%>)">
        <%= link_to plant.name, plant_path(plant), class: "plant-name" %>
        <%= link_to "Delete", plant_path(plant), method: :delete, class: "delete-link btn btn-sm btn-danger" %>
      </div>
    <% end %>
    </div>
</div>




<%= link_to 'Back', gardens_path %>


<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <div class="card p-4">
        <h3>Add a plant</h3>

        <%= simple_form_for [@garden, @plant] do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <%= f.submit "Create" %>
        <% end %>
      </div>
    </div>
  </div>
</div>



